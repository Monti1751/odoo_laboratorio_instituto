<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Laboratorio Principal (ubicación interna raíz) -->
        <record id="location_laboratorio" model="stock.location">
            <field name="name">Laboratorio Principal</field>
            <field name="usage">internal</field>
            <field name="location_id" ref="stock.stock_location_locations" />
        </record>

        <!-- Mueble 1 -->
        <record id="location_mueble1" model="stock.location">
            <field name="name">Mueble 1</field>
            <field name="usage">internal</field>
            <field name="location_id" ref="location_laboratorio" />
        </record>

        <record id="location_mueble1_armario_a" model="stock.location">
            <field name="name">Armario A</field>
            <field name="usage">internal</field>
            <field name="location_id" ref="location_mueble1" />
        </record>

        <record id="location_mueble1_armario_b" model="stock.location">
            <field name="name">Armario B</field>
            <field name="usage">internal</field>
            <field name="location_id" ref="location_mueble1" />
        </record>

        <!-- Mueble 2 -->
        <record id="location_mueble2" model="stock.location">
            <field name="name">Mueble 2</field>
            <field name="usage">internal</field>
            <field name="location_id" ref="location_laboratorio" />
        </record>

        <record id="location_mueble2_armario_a" model="stock.location">
            <field name="name">Armario A</field>
            <field name="usage">internal</field>
            <field name="location_id" ref="location_mueble2" />
        </record>

        <record id="location_mueble2_armario_b" model="stock.location">
            <field name="name">Armario B</field>
            <field name="usage">internal</field>
            <field name="location_id" ref="location_mueble2" />
        </record>

        <!-- Área de Equipos -->
        <record id="location_area_equipos" model="stock.location">
            <field name="name">Área de Equipos</field>
            <field name="usage">internal</field>
            <field name="location_id" ref="location_laboratorio" />
        </record>

    </data>
</odoo>